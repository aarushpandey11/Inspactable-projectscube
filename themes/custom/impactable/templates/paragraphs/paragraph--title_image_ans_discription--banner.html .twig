/**
 * @file
 * banner  Impactable section template.
 */
#}


 {% set bg_url = file_url(paragraph.field_about_image.entity.field_media_image.0.entity.uri.value) %}
<section class="banner-section"
         style="
            background:
                url(' {{ bg_url }}');
            background-size: cover;
            background-position: center;
         ">

    <div class="banner-container">
        <div class="banner-content">
            <h1 class="banner-title">{{ paragraph.field_title.value|raw }}</h1>
            <p class="banner-subtitle"> {{ paragraph.field_discription.value|raw }}</p>
            <a href="{{ paragraph.field_link.0.url }}" class="btn-learn-more">{{ paragraph.field_link.title }}</a>
        </div>
    </div>
</section>
